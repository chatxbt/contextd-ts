{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".", // Base directory (relative to `tsconfig.json`)
      "paths": {
        "@modules/*": ["src/modules/*"], // Alias for `src/modules/`
        "@utils/*": ["src/utils/*"]      // Alias for `src/utils/`
      }
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"]
  }
  
  